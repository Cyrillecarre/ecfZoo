{% extends 'base.html.twig' %}

{% block title %}Veterinary index{% endblock %}

{% block body %}
    <h1>Veterinary index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for veterinary in veterinaries %}
            <tr>
                <td>{{ veterinary.id }}</td>
                <td>{{ veterinary.email }}</td>
                <td>{{ veterinary.roles ? veterinary.roles|json_encode : '' }}</td>
                <td>{{ veterinary.password }}</td>
                <td>
                    <a href="{{ path('app_veterinary_show', {'id': veterinary.id}) }}">show</a>
                    <a href="{{ path('app_veterinary_edit', {'id': veterinary.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_veterinary_new') }}">Create new</a>
{% endblock %}
