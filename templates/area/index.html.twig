{% extends 'base.html.twig' %}

{% block title %}Area index{% endblock %}

{% block body %}
    <h1>Area index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Comment</th>
                <th>image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for area in areas %}
            <tr>
                <td>{{ area.id }}</td>
                <td>{{ area.name }}</td>
                <td>{{ area.description }}</td>
                <td>{{ area.comment }}</td>
                {% if area.imagePath %}
    {% for image in area.imagePath|split(',') %}
        <img src="{{ asset('uploads/' ~ image) }}" alt="Image" />
    {% endfor %}
{% endif %}
                <td>
                    <a href="{{ path('app_area_show', {'id': area.id}) }}">show</a>
                    <a href="{{ path('app_area_edit', {'id': area.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_area_new') }}">Create new</a>
{% endblock %}
