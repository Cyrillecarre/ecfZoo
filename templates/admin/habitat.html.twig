{% extends 'admin/index.html.twig' %}

{% block javascripts %}
    <script src="{{ asset('scripts/admin.js') }}" defer></script>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/admin.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/adminDash.css') }}">
{% endblock %}

{% block title %}habitats{% endblock %}

{% block content %}
<h1>Liste des Zones</h1>
    <div class="listeArea">
        {% for area in areas %}
            <div class="areaItem">
                <hr class="hrListe">
                <p>{{ area.name }}</p>
                <p>{{ area.description }}</p>
                <div class="imageDash">
                    {% for image in area.images %}
                    <img src="{{ asset('uploads/' ~ image.path) }}" alt="Image" class="imageDash" />
                    {% endfor %}
                </div>
                <p>{{ area.comment }}</p>
                <div class="btnPosition">
                    <a href="{{ path('admin_area_edit', { id: area.id }) }}" class="btnAction">Modifier</a>
                </div>
                <hr class="hrListe">
            </div>
        {% endfor %}
    </div>
{% endblock %}