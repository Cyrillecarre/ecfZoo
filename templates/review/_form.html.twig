{{ form_start(form) }}

<div class="form-group">
    <label for="{{ form.name.vars.id }}">{{ form.name.vars.label }}</label>
    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.name) }}
</div>

<div class="form-group star-rating">
    <div class="starTitre">
        <input type="hidden" id="rating-input" name="{{ form.count.vars.full_name }}" class="star-rating-input">
        {% for i in 1..5 %}
            <span class="star" data-value="{{ i }}">&#9733;</span>
        {% endfor %}
    </div>
</div>


<div class="form-group">
    <label for="{{ form.content.vars.id }}">{{ form.content.vars.label }}</label>
    {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 5}}) }}
    {{ form_errors(form.content) }}
</div>

<div class="form-group">
    <label for="{{ form.date.vars.id }}">{{ form.date.vars.label }}</label>
    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.date) }}
</div>

<button type="submit" class="btnActionForm">{{ button_label|default('Enregistrer') }}</button>

{{ form_end(form) }}

