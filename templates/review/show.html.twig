{% extends 'base.html.twig' %}

{% block title %}Review{% endblock %}

{% block body %}
    <h1>Review</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ review.name }}</td>
            </tr>
            <tr>
                <th>Count</th>
                <td>{{ review.count }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ review.content }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ review.date ? review.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>IsApprouved</th>
                <td>{{ review.isApprouved ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_review_index') }}">back to list</a>

    <a href="{{ path('app_review_edit', {'id': review.id}) }}">edit</a>

    {{ include('review/_delete_form.html.twig') }}
{% endblock %}
